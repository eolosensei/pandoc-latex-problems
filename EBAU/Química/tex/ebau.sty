% DECLARACIÓN DE COMANDOS PROPIOS

\newcommand{\geconvertbigger}[5]{
    \( \SI[unit-color=blue]{#1}{\cancel#2} \cdot
    \frac{ \SI{1}{#4} }{
           \SI[unit-color=blue]{#3}{\cancel#2} }
    = \SI{#5}{#4} \)
}

\newcommand{\geconvertlesser}[5]{
    \( \SI[unit-color=blue]{#1}{\cancel#2} \cdot
    \frac{ \SI{#3}{#4} }{
           \SI[unit-color=blue]{1}{\cancel#2} }
    = \SI{#5}{#4} \)
}


